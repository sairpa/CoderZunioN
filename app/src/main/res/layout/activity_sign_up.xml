<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    tools:context=".SignUp">


    <EditText
        android:id="@+id/etusrnm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:ems="10"
        android:foregroundGravity="center"
        android:gravity="center"
        android:hint="Email here!"
        android:inputType="textEmailAddress"
        android:text="rpa@123.com"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/etpswd"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/etpswd"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etpswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="58dp"
        android:ems="10"
        android:foregroundGravity="center"
        android:gravity="center"
        android:hint="A Pin here!"
        android:inputType="numberPassword"
        android:text="135681"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etusrnm" />

    <Button
        android:id="@+id/btnsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:onClick="signIn"
        android:text="Sign In"
        android:textAllCaps="false"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnsu"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnsu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="53dp"
        android:layout_marginTop="82dp"
        android:onClick="signUp"
        android:text="Sign Up"
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@+id/btnsi"
        app:layout_constraintTop_toBottomOf="@+id/etpswd" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/cir1" />


</androidx.constraintlayout.widget.ConstraintLayout>